<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/shade8"
    android:paddingBottom="20dp"
    tools:context=".views.homeView.CreateRoomBottomSheet">
    <TextView
        android:id="@+id/header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Room"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/header_text"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:weightSum="10"
        android:layout_below="@id/header_text">


        <EditText
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="Room name"
            android:layout_weight="9"
            android:background="@drawable/create_room_edittext_name"
            android:textColor="@color/white"
            android:textColorHint="@color/shade6"/>

        <Button
            android:id="@+id/create_room"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:text="Create"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"
            android:background="@drawable/create_room_button"
            android:textColor="@color/white"/>
    </LinearLayout>

</RelativeLayout>